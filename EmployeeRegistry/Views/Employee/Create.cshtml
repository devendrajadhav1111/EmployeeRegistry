
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Hidden("RedirectTo", Url.Action("Index", "Employee"));
    <input type="hidden" id="empId" value="@ViewBag.EmpId" />

    <section class="h-100 h-custom" style="background-color: #8fc4b7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                             class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                             alt="Sample photo">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Employee Registration Form</h3>

                            <form class="px-md-2">

                                <div class="form-outline mb-4">
                                    <input type="text" id="txtName" class="form-control" placeholder="Enter the Name" />
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline mb-4">
                                            <input type="number" id="txtAge" class="form-control" placeholder="Enter the Age" />
                                        </div>

                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-4">

                                        <div class="form-outline mb-6">
                                            <textarea class="form-control" id="txtAddress" rows="3" placeholder="Enter the Address"></textarea>
                                        </div>

                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div>

                                            <select class="select" id="ddlStates">
                                                <option value="0">Select State</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <select class="select" id="ddlDistricts">
                                            <option value="0">Select District</option>
                                        </select>

                                    </div>


                                </div>

                                <button type="button" id="btnSubmit" class="btn btn-success btn-lg mb-1">Submit</button>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/Scripts/Custom/add_employee.js"></script>
}

